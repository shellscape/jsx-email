{
  "name": "repo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "./shared/bootstrap.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@dot/versioner": "^0.4.2",
    "@moonrepo/cli": "1.35.0",
    "@swc/core": "^1.3.91",
    "@swc/helpers": "^0.5.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "22.14.1",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "create-mail": "workspace:^",
    "gh-pages": "^6.0.0",
    "happy-dom": "^17.4.4",
    "husky": "^9.1.7",
    "jsx-email": "workspace:^",
    "lint-staged": "15.5.1",
    "oxlint": "^0.16.6",
    "prettier": "^3.5.3",
    "prettier-plugin-package": "^1.4.0",
    "ts-node": "10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxlint --format stylish --fix",
      "prettier --write"
    ],
    "**/(package|tsconfig(.*)?).json": [
      "prettier --write"
    ],
    "(pnpm-workspace|.github/**/*).{yml,yaml}": [
      "prettier --write"
    ],
    "*package.json": [
      "prettier --write"
    ],
    "((.github/**/*)|(docs/**/*)|(web/**/*.md)|(README|CHANGELOG)|(**/(README|CHANGELOG))).md": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.15.9",
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.2",
      "@types/react-dom": "19.1.2",
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "react-router-dom": "6.16.0",
      "vite": "^6.3.0"
    }
  }
}
