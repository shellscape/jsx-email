{
  "name": "repo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "./shared/bootstrap.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@dot/versioner": "^0.4.3",
    "@moonrepo/cli": "1.41.7",
    "@swc/core": "^1.3.91",
    "@swc/helpers": "^0.5.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "25.0.8",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "create-mail": "workspace:^",
    "gh-pages": "^6.0.0",
    "happy-dom": "^20.1.0",
    "husky": "^9.1.7",
    "jsx-email": "workspace:^",
    "lint-staged": "16.2.7",
    "oxlint": "^1.39.0",
    "prettier": "^3.5.3",
    "prettier-plugin-package": "^2.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxlint --format stylish --fix",
      "prettier --write"
    ],
    "**/(package|tsconfig(.*)?).json": [
      "prettier --write"
    ],
    "(pnpm-workspace|.github/**/*).{yml,yaml}": [
      "prettier --write"
    ],
    "*package.json": [
      "prettier --write"
    ],
    "((.github/**/*)|(docs/**/*)|(web/**/*.md)|(README|CHANGELOG)|(**/(README|CHANGELOG))).md": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.8",
      "@types/react-dom": "19.2.3",
      "react": "19.2.3",
      "react-dom": "19.2.3",
      "react-router-dom": "6.16.0",
      "vite": "^7.3.1"
    }
  }
}
